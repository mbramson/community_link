<h2>Listing Events</h2>
<div class="events-container">
  <%= for event <- @events do %>
    <div class="event">
      <div>
        <span class="event-org">
          <%= event.organization.name %>
        </span>
        </br>
        <span class="event-title">
          <%= event.name %>
        </span>
        <span class="float-right">
          Points:
          <%= event.points %>
        </span>
        </br>
        <span>
          Description:</br>
          <%= event.description %>
        </span>
        <span class="float-right">
          <a href="<%= event_path(@conn, :show, event) %>" class="btn btn-primary" style="background-color: #2f1a8c;">Volunteer</a>
        </span>
      </div>
    </div>
  <% end %>
</div>

  <span>
    <%= link "New Event", to: event_path(@conn, :new), style: "color: #eee" %>
  </span>